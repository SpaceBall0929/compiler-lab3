{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [//这是给gcc传入的一系列参数，在终端怎样用gcc，这里就要怎样写
                "-fdiagnostics-color=always",
                "${file}",
                "-lfl",
                "-ly",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}
